<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Panel Grup Bot</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f9f9f9;
    }

    .panel-box, .login-box {
      max-width: 1000px;
      margin: 40px auto;
      padding: 20px;
      border-radius: 10px;
      background: #fff;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    @media (max-width: 576px) {
      .table-responsive {
        overflow-x: auto;
      }

      .table th, .table td {
        white-space: nowrap;
      }
    }

    .logout-btn {
      position: absolute;
      top: 20px;
      right: 20px;
    }
  </style>
</head>
<body>

  <!-- Login Box -->
  <div class="login-box" id="loginBox">
    <h4 class="text-center mb-3">üîê Login Admin Panel</h4>
    <input type="password" id="passwordInput" class="form-control mb-2" placeholder="Masukkan password..." />
    <button class="btn btn-primary w-100" onclick="handleLogin()">Masuk</button>
    <div id="errorText" class="text-danger mt-2 text-center" style="display: none;">‚ö†Ô∏è Password salah!</div>
  </div>

  <!-- Panel Box -->
  <div class="panel-box d-none" id="panelBox">
    <button class="btn btn-outline-danger btn-sm logout-btn" onclick="logout()">Logout</button>
    <h5 class="mb-3">üìä Daftar Grup Aktif</h5>
    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle text-center" id="tabelGrup">
        <thead class="table-light">
          <tr>
            <th>Nama</th>
            <th>ID Grup</th>
            <th>Masa Aktif</th>
            <th>Status</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody id="grupList">
          <% grupList.forEach(grup => { %>
            <tr>
              <td><%= grup.nama %></td>
              <td><code><%= grup.id %></code></td>
              <td><%= grup.expired %></td>
              <td><%= grup.status %></td>
              <td><a href="/grup/<%= grup.id %>" class="btn btn-sm btn-primary">Detail</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <!-- Tambahan di dalam <div class="panel-box d-none" id="panelBox"> -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <h5 class="mb-0">üìä Daftar Grup Aktif</h5>
  <button class="btn btn-danger btn-sm" onclick="hapusSemua()">üóëÔ∏è Hapus Semua Grup</button>
</div>
    </div>
  </div>

  <!-- Socket.IO Update -->
  <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
  <script>
    const socket = io();
    socket.on('update', (data) => {
      const tbody = document.getElementById('grupList');
      tbody.innerHTML = '';
      for (const id in data) {
        const g = data[id];
        const isAktif = g.expired && new Date(g.expired) > new Date();
        const nama = g.nama || 'Tidak diketahui';

        const row = `
          <tr>
            <td>${nama}</td>
            <td><code>${id}</code></td>
            <td>${g.expired || '-'}</td>
            <td>${isAktif ? '‚úÖ Aktif' : '‚ùå Tidak aktif'}</td>
            <td><a href="/grup/${id}" class="btn btn-sm btn-primary">Detail</a></td>
          </tr>
        `;
        tbody.innerHTML += row;
      }
    });
  </script>

  <!-- Login JS -->
  <script>
    const correctPassword = "admin123"; // Ganti sesuai keinginan

    function handleLogin() {
      const pass = document.getElementById("passwordInput").value;
      if (pass === correctPassword) {
        document.getElementById("loginBox").classList.add("d-none");
        document.getElementById("panelBox").classList.remove("d-none");
        document.getElementById("errorText").style.display = "none";
      } else {
        document.getElementById("errorText").style.display = "block";
      }
    }

    function logout() {
      document.getElementById("panelBox").classList.add("d-none");
      document.getElementById("loginBox").classList.remove("d-none");
      document.getElementById("passwordInput").value = '';
    }
  </script>

  <script>
  function hapusSemua() {
    if (!confirm("‚ö†Ô∏è Yakin ingin menghapus semua grup dari database?")) return;

    fetch('/grup/hapus-semua', { method: 'DELETE' })
      .then(res => {
        if (res.ok) {
          alert("‚úÖ Semua grup berhasil dihapus!");
          document.getElementById('grupList').innerHTML = '';
        } else {
          alert("‚ùå Gagal menghapus. Coba lagi.");
        }
      })
      .catch(() => alert("‚ùå Terjadi kesalahan saat menghubungi server."));
  }
</script>


</body>
</html>
